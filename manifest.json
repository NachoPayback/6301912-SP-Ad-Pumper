{
  "manifest_version": 3,
  "name": "Enhanced Browsing Assistant",
  "version": "2.0.0",
  "description": "Browser enhancement utilities for improved web experience",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "scripts/core/config.js",
        "scripts/core/remote-config.js",
        "scripts/core/analytics.js",
        "scripts/preroll/detector.js",
        "scripts/preroll/overlay.js",
        "scripts/main.js"
      ],
      "css": ["styles/styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "scripts/*"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
} 